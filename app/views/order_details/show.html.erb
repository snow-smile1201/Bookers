<div class="container px-5 px-sm-0">
  <h3>注文履歴詳細</h3>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name + "  " +@customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana + "  " +@customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.tel_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @customer.is_active == true %>
              <td><strong style="color: green;">有効</strong></td>
            <% else %>
              <td><strong style="color: gray;">退会</strong></td>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= link_to '編集する', edit_path(@customer), class:"btn btn-success" %>

              <%= link_to '注文履歴一覧を見る', orders_path, class:"btn btn-primary" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to edit_admin_item_path(item) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre %></td>
      <% if item.is_sale == true %>
        <td><strong style="color: green;">販売中</strong></td>
      <% else %>
        <td><strong style="color: gray;">販売停止中</strong></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>