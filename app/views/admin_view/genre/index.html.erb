<div class="container px-sm-0 px-5" >
  <h3>ジャンル一覧・追加</h3>
  <div class="row my-5 px-sm-0 px-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <table class="table table-borderless">
        <tbody>
          <%= form_with model: @book, local: true do |f| %>
            <tr>
              <th>ジャンル名</th>
              <td><%= f.text_field :name, class:"form-control" %></td>
              <td><%= f.submit '新規作成', class:"btn btn-success" %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row px-sm-0 px-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th colspan="3">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @book.title %></td>
              <td></td>
              <td></td>
              <td><%= link_to "編集する", edit_book_path(@book), class: "btn btn-success" %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
