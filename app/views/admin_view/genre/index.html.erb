<div class="container px-sm-0 px-5" >
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
    <%= form_with model: @genre, local: true do |f| %>
      <div class="field">
        <label>ジャンル名</label><%= f.text_field :genre_name %><%= f.submit '新規作成' %>
      </div>
    <% end %>
    <table>
      <thead>
        <tr>
          <th colspan="3">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td></td>
            <td></td>
            <td><%= link_to "編集する", edit_admim_genre_path(genre) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




