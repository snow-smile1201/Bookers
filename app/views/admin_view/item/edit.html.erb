<div class="container px-5 px-sm-0">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col-md-4 p-5">
      <%= image_tag @book.user.get_profile_image(300, 200) %>
    </div>
    <div class="col-md-8 p-5">
      <table class="table table-borderless">
        <tbody>
            <th>商品名</th>
            <td><%= @book.title %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @book.body %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @book.id %></td>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <td><%= @book.title %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <% if @book.present? == true %>
              <td><strong style="color: green;">販売中</strong></td>
            <% else %>
              <td><strong style="color: gray;">販売停止中</strong></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= link_to '編集する', edit_book_path(@book), class:"btn btn-success" %>
    </div>
  </div>
</div>