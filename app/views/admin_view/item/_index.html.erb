<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%=　link_to item.name, edit_admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre %></td>
      <% if item.is_on_sale == 'true' %>
        <td>販売中</td>
      <% else %>
        <td>販売停止中</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>