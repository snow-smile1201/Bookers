<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="col-md-4">
      <%= image_tag @item.get_item_image(150, 100) %>
    </div>
    <div class="col-md-8">
        <label class"d-inline-block w-150">
          商品名
        </label>
        <%= @item.name %>
        <label class"d-inline-block w-150">
          商品説明
        </label>
        <%= @item.introduction %>
        <label class"d-inline-block w-150">
          ジャンル
        </label>
        <%= @item.genre %>
        <label class"d-inline-block w-150">
          税込価格
          （税抜価格）
        </label>
        <%= @item.price * tax %> (<%= @item.price %>)円
        <label class"d-inline-block w-150">
          販売ステータス
        </label>
        <% if @item.is_on_sale == 'true' %>
        <p>販売中</p>
      <% else %>
        <p>販売停止中</p>
      <% end %>
        <div>
          <%= link_to '編集する', edit_admin_item_path(@item), class:"btn btn-success" %>
        </div>
    </div>
  </div>
</div>